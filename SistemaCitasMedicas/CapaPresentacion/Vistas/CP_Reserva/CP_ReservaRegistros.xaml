<Window x:Class="CapaPresentacion.Vistas.CP_Reserva.CP_ReservaRegistros"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapaPresentacion.Vistas.CP_Reserva"
        mc:Ignorable="d"
        Title="CP_ReservaRegistros" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dtgridRegistrosCita" HorizontalAlignment="Left" Height="190" VerticalAlignment="Top" Width="773" Margin="10,10.333,0,0" Grid.Row="1"/>
        <Button x:Name="btnModificar" Content="Modificar" HorizontalAlignment="Left" Margin="324,26.667,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="btnModificar_Click"/>
        <Button x:Name="btnVentanaNuevaCita" Content="Agregar Nueva" HorizontalAlignment="Left" Margin="127,26.667,0,0" Grid.Row="2" VerticalAlignment="Top" Width="92" Click="btnVentanaNuevaCita_Click"/>
        <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="522,26.667,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="btnEliminar_Click"/>
        <TextBox x:Name="txtboxFiltro" HorizontalAlignment="Left" Height="34" Margin="10,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="433" TextChanged="txtboxFiltro_TextChanged"/>
        <Label Content="Ingrese Dni de Paciente ó Matricula de Medico ó Nombre de Usuario para filtrar" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dtpickerFiltro" HorizontalAlignment="Left" Margin="466,61,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.291,0.776" Height="34" VerticalContentAlignment="Center" SelectedDateChanged="dtpickerFiltro_SelectedDateChanged"/>
        <RadioButton x:Name="rdBtnFechaSelec" Content="En Fecha " HorizontalAlignment="Left" Margin="617,61,0,0" VerticalAlignment="Top" GroupName="FiltroFecha" IsChecked="True" Height="14" Checked="rdBtnFechaFiltro_Checked"/>
        <RadioButton x:Name="rdBtnDesdeFecha" Content="Desde Fecha" HorizontalAlignment="Left" Margin="617,81,0,0" VerticalAlignment="Top" GroupName="FiltroFecha" Checked="rdBtnFechaFiltro_Checked"/>
        <RadioButton x:Name="rdBtnTodos" Content="Todos" HorizontalAlignment="Left" Margin="715,61,0,0" VerticalAlignment="Top" GroupName="FiltroFecha" Checked="rdBtnFechaFiltro_Checked"/>
        <Label x:Name="Fecha_Cita_Medica" Content="Fecha Cita Medica" HorizontalAlignment="Left" Margin="466,30,0,0" VerticalAlignment="Top"/>
        
    </Grid>
</Window>
